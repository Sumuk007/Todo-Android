<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.TodoApp" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:navigationBarColor">@color/md_theme_surface</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/md_theme_onSurface</item> <!-- same as toolbar -->
        <item name="android:windowTranslucentStatus">false</item>

    </style>

    <style name="Theme.TodoApp" parent="Base.Theme.TodoApp" />
    <style name="Widget.MaterialComponents.Toolbar.Primary" parent="Widget.MaterialComponents.Toolbar">
        <item name="titleTextColor">@color/md_theme_onPrimary</item>
    </style>
    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">30sp</item>
    </style>

</resources>